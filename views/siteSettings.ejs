<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />

    <link href="/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="/js/bootstrap.bundle.min.js "></script>
    <title><%=page.title %></title>
  </head>
  <body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link active" href="/organizer/">Organizer Home Page</a>
          </li>
        </ul>
      </div>
    </nav>

    <h1><%=page.heading%></h1>
    <p><%=page.description%></p>

    <div class="container mt-5">
      <div class="row">
        <div class="col-sm-12">
          <% siteSettings.forEach((siteSettings) => {%>

          <div class="card">
            <div class="clearfix bg-primary">
              <div class="card-header bg-primary text-white float-start"><%=siteSettings.title%> Settings:</div>
              <div class="card-header bg-primary text-white float-end"></div>
            </div>

            <div class="clearfix bg-primary">
              <form action="update_site_settings" method="post">
                <div class="card-header bg-primary text-white float-start">Heading</div>
                <div class="card-header bg-primary text-white float-start">
                  <input
                    id="id_settings_heading"
                    type="text"
                    size="20"
                    name="heading"
                    value="<%=siteSettings.heading%>"
                  />

                  <input type="hidden" name="name" value="<%=siteSettings.name%>" />
                  description
                  <input
                    id="id_settings_desc"
                    type="text"
                    size="20"
                    name="description"
                    value="<%=siteSettings.description%>"
                  />
                </div>
                <div class="card-header bg-primary text-white float-end">
                  <button type="submit" class="btn btn-warning">Update</button>
                </div>
              </form>
            </div>
          </div>

          <br />
          <%});%>
        </div>
      </div>
    </div>

    <% siteSettings.forEach( (siteSettings) => { %>
    <p><b><%=siteSettings.title %> Settings</b></p>
    <!-- data.name data.title are not to be changed  -->
    <form action="update_site_settings" method="post">
      <p>
        Heading:
        <input id="id_settings_heading" type="text" size="20" name="heading" value="<%=siteSettings.heading%>" />
      </p>

      <p>
        Description:<input
          id="id_settings_desc"
          type="text"
          size="20"
          name="description"
          value="<%=siteSettings.description%>"
        />
      </p>
      <button type="submit">Update the <%=siteSettings.title %></button>
      <input type="hidden" name="name" value="<%=siteSettings.name%>" />
    </form>

    <% }); %>
  </body>
</html>
